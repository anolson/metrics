<div id="user" class="dark_grey">
  <%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br />

    <%= f.label :password %>
    <%= f.password_field :password %><br />

    <%= f.label :threshold_power %>
    <%= f.text_field :threshold_power, :class => 'threshold_power' %> <span class="watts">W</span><br />

    <%= f.submit "Let's get started", :class => 'submit' %>
  <% end %>  

  <% if @user.errors.any? %>
    <ul id="errors">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= render :partial => 'common/alert' %>
</div>

<%= render :partial => 'common/login_instructions' %>